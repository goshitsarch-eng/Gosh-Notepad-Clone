{
  "name": "notepad-electron",
  "version": "1.0.0",
  "description": "Windows 95/98 Notepad Clone",
  "main": "src/main/main.js",
  "scripts": {
    "start": "ELECTRON_RUN_AS_NODE= electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "98.css": "^0.1.18"
  },
  "build": {
    "appId": "com.notepad.electron",
    "productName": "Notepad",
    "directories": {
      "output": "build"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icons/icon.png"
    },
    "mac": {
      "target": [
        "dir"
      ],
      "icon": "assets/icons/icon.icns",
      "category": "public.app-category.productivity",
      "identity": null
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icons/icon.png",
      "category": "Utility"
    }
  }
}
